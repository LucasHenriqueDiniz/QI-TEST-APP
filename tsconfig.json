{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "constants/*": ["./constants/*"],
      "components/*": ["./components/*"],
      "hooks/*": ["./hooks/*"],
      "config/*": ["./config/*"],
      "assets/*": ["./assets/*"],
      "types/*": ["./types/*"],
      "context/*": ["./context/*"],
      "utils/*": ["./utils/*"],
      "styles/*": ["./styles/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
